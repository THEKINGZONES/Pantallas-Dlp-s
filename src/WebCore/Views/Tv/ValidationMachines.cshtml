@model System.Data.DataTable
@{
    var LineaMax = 19;
    LineaMax++;
    var HrActual = DateTime.Now.Hour;
    var MinHr = 0;
    var classActive = "active";
    if (HrActual >= 06 && HrActual < 16)
    {
        MinHr = 6;
    }
    else if (HrActual >= 15 && HrActual <= 24)
    {
        MinHr = 15;

    }
    else
    {
        MinHr = 00;
    }


}
<h1>Validacion De Pruebas</h1>
@{
    classActive = "active";
}
<div class="box box-primary">
    <div class="box-header">
        <div class="btn-group" role="group">
            @for (int i = 0; i < 4; i++)
            {

                var style = "btn-primary";
                switch (i % 5)
                {
                    case 1: style = "btn-info"; break;
                    case 2: style = "btn-secondary"; break;
                    case 3: style = "btn-success"; break;
                    case 4: style = "btn-danger"; break;
                }
                <a class="btn @style" data-toggle="tab" aria-expanded="true">ORBIT</a>
            }

        </div>
    </div>
</div>
